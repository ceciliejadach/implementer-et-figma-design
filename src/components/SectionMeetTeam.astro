---
import "../styles/global.css";
import Button from "./Button.astro";
---

<section class="full-bleed">
  <div>
    <div class="flex">
      <div>
        <h4>Meet Our Great Team</h4>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. enim ad minim veniam, quis nostrud exercitation.</p>
      </div>
      <div>
        <Button variant="primary" text="Join our team" />
      </div>
    </div>
  </div>
</section>

<style>
  @layer components {
    section {
      padding: 2rem 1rem;
      margin-inline: auto;

      & > div {
        container-type: inline-size;

        .flex {
          display: grid;
          gap: 1rem;

          & > :first-child {
            max-width: 38rem;
          }
        }

        @container (width > 800px) {
          .flex {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
          }
        }
      }
    }
  }
</style>
