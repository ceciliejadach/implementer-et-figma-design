---
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionImage from "../components/SectionImage.astro";
import SectionTurnIdeas from "../components/SectionTurnIdeas.astro";
import SectionStats from "../components/SectionStats.astro";
import SectionDarkLight from "../components/SectionDarkLight.astro";
import EmployeeSection from "../components/EmployeeSection.astro";
import SectionWeChampion from "../components/SectionWeChampion.astro";
const employeeData = await fetch("https://raw.githubusercontent.com/ceciliejadach/frontend-design/main/resources/json/employees.json").then((res) => res.json());
const firstThreeEmployees = employeeData.slice(0, 3);
---

<BaseLayout title="About">
  <SectionImage />
  <SectionTurnIdeas />
  <SectionStats />
  <SectionDarkLight />
  <SectionWeChampion />
  <EmployeeSection data={firstThreeEmployees} />
</BaseLayout>
